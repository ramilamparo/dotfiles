font pango: Noto Sans, Hack Nerd Font Mono 10

for_window [class=".*"] border pixel 4

# colour of border, background, text, indicator, and child_border
client.focused              $active-bg-color $bg-color $text-color $active-bg-color $active-bg-color
client.focused_inactive     $bg-color $bg-color $text-color $bg-color $bg-color
client.unfocused            $bg-color $bg-color $text-color $bg-color $bg-color
client.urgent               $bg-color $bg-color $text-color $bg-color $bg-color
client.placeholder          $bg-color $bg-color $text-color $bg-color $bg-color
client.background           $bg-color

#######
# BAR #
#######
bar {
    status_command exec ~/.local/bin/net-speed.sh
        colors {
        background $bg-color
        statusline $bg-color
        separator $separator-color

        # colour of border, background, and text
        focused_workspace       $active-bg-color $active-bg-color $active-text-color
        active_workspace        $bg-color $bg-color $text-color
        inactive_workspace      $bg-color $bg-color $text-color
        urgent_workspace       $bg-color $urgent-bg-color $bg-color
    }
    status_command i3status
}

